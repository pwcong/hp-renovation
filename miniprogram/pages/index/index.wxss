/**index.wxss**/

.banner {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-sign {
  width: 100%;
  height: 100%;
}

.banner-item-main {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  font-size: 24px;
  color: #222;
}

.banner-logo {
  width: 160rpx;
  height: 160rpx;
}

.content {
  box-sizing: border-box;
  padding: 32rpx 0;

  border-bottom: 2px dashed #ccc;
}

.content-item {
  box-sizing: border-box;
  padding: 32rpx 48rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.content-item:active {
  background-color: #f5f5f5;
}

.content-item image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 32rpx;
}

.content-item text {
  font-size: 14px;
  color: #333;
}
